@model EldredBrown.ProFootball.AspNet.MvcWebApp.Models.View.GameViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Season
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SeasonID)
        </dd>

        <dt>
            Week
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Week)
        </dd>

        <dt>
            Guest
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuestName)
        </dd>

        <dt>
            Guest Score
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuestScore)
        </dd>

        <dt>
            Host
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HostName)
        </dd>

        <dt>
            Host Score
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HostScore)
        </dd>

        <dt>
            Playoff Game?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsPlayoffGame)
        </dd>

        <dt>
            Notes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary btn-lg btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { seasonID = Model.SeasonID }, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
</div>
