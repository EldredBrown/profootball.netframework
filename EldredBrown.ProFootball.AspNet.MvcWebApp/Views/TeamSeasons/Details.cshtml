@if (Model.TeamSeasonScheduleProfile != null)
{
    <h3>Team Schedule Profile</h3>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                Opponent
            </th>
            <th style="text-align: right">
                GPF
            </th>
            <th style="text-align: right">
                GPA
            </th>
            <th style="text-align: right">
                OW
            </th>
            <th style="text-align: right">
                OL
            </th>
            <th style="text-align: right">
                OT
            </th>
            <th style="text-align: right">
                OWPct
            </th>
            <th style="text-align: right">
                OWG
            </th>
            <th style="text-align: right">
                OWPF
            </th>
            <th style="text-align: right">
                OWPA
            </th>
        </tr>

        @foreach (var item in Model.TeamSeasonScheduleProfile)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Opponent)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.GamePointsFor)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.GamePointsAgainst)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentWins)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentLosses)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentTies)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentWinningPercentage)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentWeightedGames)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentWeightedPointsFor)
                </td>
                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.OpponentWeightedPointsAgainst)
                </td>
            </tr>
        }

    </table>
}

